<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/vd_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_activity_settings_bg"
                    android:padding="3dp"
                    android:layout_margin="13dp">


                    <ImageView
                        android:id="@+id/vd_iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="700dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:alpha=".75"
                        android:background="@null"

                        android:scaleType="fitXY"
                        android:src="@drawable/black_1" />
                    <LinearLayout
                        android:id="@+id/vd_settings_main_box_1"
                        android:layout_alignStart="@+id/vd_iv_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vd_tv_1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="#FFF"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/settings_main_settings" />

                            <TextView
                                android:id="@+id/vd_tv_sub_1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/alert_intervals_inkognito_mode_stuff_like_that"
                                android:textColor="#FFF"
                                android:layout_marginBottom="20dp"
                                android:textSize="10dp" />
                            <TextView
                                android:id="@+id/vd_tv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="#FFF"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/her_name" />

                            <EditText
                                android:id="@+id/main_settings_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/button_bg"
                                android:textColor="#FFFFFF" />
                            <TextView
                                android:id="@+id/vd_tv_1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="#FFF"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/her_petname" />

                            <EditText
                                android:id="@+id/main_settings_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/button_bg"
                                android:textColor="#FFFFFF" />


                                <TextView
                                    android:id="@+id/tv_inkognito_sub_2_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:text="@string/her_status"
                                    android:textColor="#FFF"
                                    android:layout_marginBottom="20dp"
                                    android:textSize="20dp" />


                                <Spinner
                                    android:id="@+id/main_settings_status_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_bg"
                                    android:entries="@array/her_status_options"
                                    android:textColor="#FFFFFF">

                                </Spinner>

                            <TextView
                                android:id="@+id/tv_inkognito_sub_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/reminder_time_of_day"
                                android:textColor="#FFF"
                                android:layout_marginBottom="20dp"
                                android:textSize="14dp" />


                            <Button
                                android:id="@+id/btn_pick_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1dp"
                                android:paddingHorizontal="10dp"
                                android:background="@drawable/button_bg"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:capitalize="none"
                                android:text="@string/reminder_time" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/layout_id_1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="#FFF"
                                    android:paddingTop="10dp"
                                    android:fontFamily="sans-serif-black"

                                    android:text="@string/alert_interval" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="sans-serif-black"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="20dp"
                                        android:text="@string/set_how_long_before_event_you_wish_to_be_warned"
                                        android:textColor="#FFF"
                                        android:textSize="10dp" />

                                </LinearLayout>
                            </LinearLayout>
                            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="On the day" />
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="Day before" />
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="3 days before" />
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="1 week before" />
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="2 weeks before" />
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="4 weeks before" />
                                <CheckBox
                                    android:id="@+id/reminder_schedule_checkbox_7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:buttonTint="#FFF"
                                    android:checked="true"
                                    android:text="6 weeks before" />
                            </TableLayout>

                            <TextView
                                android:id="@+id/tv_inkognito"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="#FFF"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="30dp"
                                android:visibility="gone"
                                android:text="@string/settings_inkognito_mode" />

                            <TextView
                                android:id="@+id/tv_inkognito_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/settings_she_might_not_like_this"
                                android:textColor="#FFF"
                                android:layout_marginBottom="20dp"
                                android:visibility="gone"
                                android:textSize="10dp" />
                            <Switch
                                android:id="@+id/main_settings_incognito"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:text="@string/settings_inkognito_mode_select"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true">


                                <TextView
                                    android:id="@+id/tv_btn_cancel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:layout_weight="1"
                                    android:text="@string/button_cancel"
                                    android:textColor="#FFF"
                                    android:background="#000"
                                    android:textAlignment="center"
                                    android:textSize="30dp"
                                    android:layout_marginHorizontal="20dp"/>
                                <TextView
                                    android:id="@+id/tv_btn_save"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:layout_weight="1"
                                    android:text="@string/button_save"
                                    android:textColor="#FFF"
                                    android:background="#000"
                                    android:textAlignment="center"
                                    android:textSize="30dp"
                                    android:layout_marginHorizontal="20dp"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>




                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>