<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/vd_1"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:background="@drawable/layout_activity_settings_bg"
                    android:padding="3dp"
                    android:layout_margin="13dp">


                    <ImageView
                        android:id="@+id/vd_iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:alpha=".75"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/black_1" />
                    <LinearLayout
                        android:id="@+id/vd_settings_main_box_1"
                        android:layout_alignStart="@+id/vd_iv_1"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_inkognito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#FFF"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/pms_premenstrual_syndrome" />

                        <TextView
                            android:id="@+id/tv_inkognito_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/pms_ovulation_pms_and_menstrual"
                            android:textColor="#FFF"
                            android:layout_marginBottom="20dp"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/tv_inkognito_sub_read_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/pms_read_more"
                            android:padding="10dp"
                            android:textColor="#FFF"
                            android:layout_marginBottom="20dp"
                            android:textSize="10dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:background="@drawable/button_bg"/>
                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#FFF"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:theme="@style/MyCheckBox"
                            android:layout_marginBottom="2dp"
                            android:text="@string/pms_activate_service" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                        <CheckBox
                            android:id="@+id/checkBox_period"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#FFF"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:theme="@style/MyCheckBox"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:text="@string/pms_warn_periods" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                        <CheckBox
                            android:id="@+id/checkBox_ovul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#FFF"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:theme="@style/MyCheckBox"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:text="@string/pms_warn_ovulation" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>
                        <CheckBox
                            android:id="@+id/checkBox_pms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#FFF"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:theme="@style/MyCheckBox"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:text="@string/pms_warn_pms" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginBottom="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_inkognito_sub_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/pms_log_periods"
                                android:textColor="#FFF"
                                android:layout_marginBottom="20dp"
                                android:textSize="14dp" />


                            <Button
                                android:id="@+id/btn_date_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:paddingHorizontal="10dp"
                                android:background="@drawable/button_bg"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:capitalize="none"
                                android:text="@string/log_first_day"
                                android:layout_marginBottom="20dp"/>
                            <TextView
                                android:id="@+id/tv_inkognito_sub_22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/pms_logs"
                                android:textColor="#FFF"
                                android:layout_marginBottom="20dp"
                                android:textSize="14dp" />
                            <LinearLayout
                                android:id="@+id/ll_logs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">


                        <TextView
                            android:id="@+id/tv_btn_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:layout_weight="1"
                            android:text="@string/button_cancel"
                            android:textColor="#FFF"
                            android:background="#000"
                            android:textAlignment="center"
                            android:textSize="30dp"
                            android:layout_marginHorizontal="20dp"/>
                        <TextView
                            android:id="@+id/tv_btn_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:layout_weight="1"
                            android:text="@string/button_save"
                            android:textColor="#FFF"
                            android:background="#000"
                            android:textAlignment="center"
                            android:textSize="30dp"
                            android:layout_marginHorizontal="20dp"/>
                    </LinearLayout>



                </RelativeLayout>
            </LinearLayout>
                <!--
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_activity_settings_bg"
                android:padding="3dp"
                android:layout_margin="13dp"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
